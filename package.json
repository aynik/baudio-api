{
  "name": "baudio-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "deploy": "now -e NODE_ENV=production -e REDIS_URL=@redis-url",
    "parser": "pegjs -o parsers/title.js parsers/title.pegjs",
    "test": "xo index.js handlers/* models/* transforms/*"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "curly": 0,
      "no-constant-condition": 0,
      "space-before-function-paren": 0,
      "babel/new-cap": 0,
      "babel/object-curly-spacing": 0,
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ]
    }
  },
  "dependencies": {
    "accepts": "^1.3.3",
    "body-parser": "^1.15.2",
    "co-body": "^4.2.0",
    "connect": "^3.5.0",
    "connect-cors": "^0.5.6",
    "connect-logger": "0.0.1",
    "connect-route": "^0.1.5",
    "connect-send-json": "^1.0.0",
    "icy": "^2.1.0",
    "ioredis": "^2.3.0",
    "koa": "1.2.2",
    "koa-cors": "0.0.16",
    "koa-route": "^2.4.2",
    "lru-cache": "^4.0.1",
    "urlrouter": "^0.5.4"
  },
  "devDependencies": {
    "pegjs": "^0.10.0"
  }
}
